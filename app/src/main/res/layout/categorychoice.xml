<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="205dp"
            android:layout_height="340dp">

            <ImageButton
                android:id="@+id/cheap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/cheap" />

            <ImageButton
                android:id="@+id/arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/arrow_back" />

            <Button
                android:id="@+id/cheap2"
                android:layout_width="145dp"
                android:layout_height="28dp"
                android:layout_marginTop="280dp"
                android:background="#FFD400"
                android:fontFamily="@font/nanumbarunpen_b"
                android:text="5000원 이내인 음식" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="205dp"
            android:layout_height="340dp">

            <ImageButton
                android:id="@+id/mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mood" />

            <Button
                android:id="@+id/mood2"
                android:layout_width="145dp"
                android:layout_height="28dp"
                android:layout_marginTop="280dp"
                android:background="#FFD400"
                android:fontFamily="@font/nanumbarunpen_b"
                android:text="분위기 있는 음식" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="205dp"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/low" />

            <Button
                android:id="@+id/low2"
                android:layout_width="145dp"
                android:layout_height="28dp"
                android:layout_marginTop="280dp"
                android:background="#FFD400"
                android:fontFamily="@font/nanumbarunpen_b"
                android:text="저칼로리 음식" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/app_icon" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>